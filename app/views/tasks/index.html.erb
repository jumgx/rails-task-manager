
<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> - <%= link_to "update", task_edit_path(task) %> -
    <%= link_to "Delete #{task.title}",
            task_destroy_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>


<%= link_to("+ Add New Task", tasks_new_path) %>